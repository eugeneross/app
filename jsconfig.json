{
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "styled",
          "css",
          "sty",
          "is",
          "isNot",
          "isOr",
          "isSomeNot"
        ]
      }
    ]
  },
  "exclude": [
    "node_modules",
    "public",
    "dist"
  ],
  "include": [
    "blocks/**/*",
    "components/**/*",
    "elements/**/*",
    "containers/**/*",
    "pages/**/*",
    "styles/*",
    "utils/*"
  ]
}